{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".build",
    "rootDir": "./",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "paths": {
      "~/assets/*": ["./src/assets/*"],
      "~/constants/*": ["./src/constants/*"],
      "~/models/*": ["./src/models/*"],
      "~/services/*": ["./src/services/*"],
      "~/use-cases/*": ["./src/use-cases/*"],
      "~/utils/*": ["./src/utils/*"],
      "~/workers/*": ["./src/workers/*"],
    }
  },
  "include": ["src", "test.ts"],
  "exclude": [
    "node_modules",
    "node_modules/**/*",
    ".serverless/**/*",
    "terraform/**/*",
    ".webpack/**/*",
    ".esbuild/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    ".idea/**/*",
    "dist/**/*",
    "tests/**/*"
  ]
}
